{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Report",
  "definitions": {
    "report": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "reportable_id": {
          "type": "integer"
        },
        "reportable_type": {
          "type": "string",
          "enum": [
            "Character",
            "Conversation",
            "Post",
            "User"
          ]
        },
        "creator_id": {
          "type": "integer"
        },
        "closed_by_id": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "integer"
            }
          ]
        },
        "deleted_by_id": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "integer"
            }
          ]
        },
        "status": {
          "type": "string",
          "enum": [
            "open",
            "resolved",
            "wontfix",
            "spite"
          ]
        },
        "description": {
          "type": "string"
        },
        "deleted": {
          "type": "boolean"
        },
        "closed": {
          "type": "boolean"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "deleted_at": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string",
              "format": "date-time"
            }
          ]
        },
        "closed_at": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string",
              "format": "date-time"
            }
          ]
        },
        "editable": {
          "type": "boolean"
        },
        "deletable": {
          "type": "boolean"
        },
        "reportable": {
          "$ref": "reportable.json#/definitions/reportable"
        },
        "creator": {
          "$ref": "user.json#/definitions/user"
        },
        "deleted_by": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "user.json#/definitions/user"
            }
          ]
        },
        "closed_by": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "user.json#/definitions/user"
            }
          ]
        }
      },
      "required": [
        "id",
        "reportable_id",
        "reportable_type",
        "creator_id",
        "status",
        "description",
        "deleted",
        "closed",
        "created_at",
        "updated_at",
        "closed_at"
      ],
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "report": {
      "$ref": "#/definitions/report"
    }
  },
  "required": [
    "report"
  ],
  "additionalProperties": false
}
