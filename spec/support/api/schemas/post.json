{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Post",
  "definitions": {
    "post": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "author_id": {
          "type": "integer"
        },
        "editor_id": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "integer"
            }
          ]
        },
        "character_id": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "integer"
            }
          ]
        },
        "conversation_id": {
          "type": "integer"
        },
        "deleted_by_id": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "integer"
            }
          ]
        },
        "display_name": {
          "type": "string",
          "description": "A cached copy of the author's display name."
        },
        "character_name": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            }
          ],
          "description": "A cached copy of the character's name."
        },
        "body": {
          "type": "string",
          "description": "Contains the original post body, in unprocessed form."
        },
        "formatted_body": {
          "type": "string",
          "description": "Contains a processed, HTML-safe version of the post body."
        },
        "likes_count": {
          "type": "integer"
        },
        "deleted": {
          "type": "boolean",
          "description": "Indicates whether this post is deleted."
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "Stores a timestamp of when this post was created."
        },
        "updated_at": {
          "type": "string",
          "format": "date-time",
          "description": "Stores a timestamp of when this post was last modified."
        },
        "deleted_at": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string",
              "format": "date-time"
            }
          ],
          "description": "Stores a timestamp of when this post was deleted."
        },
        "likeable": {
          "type": "boolean",
          "description": "Indicates if the current user can like this post."
        },
        "editable": {
          "type": "boolean",
          "description": "Indicates if the current user can edit this post."
        },
        "deletable": {
          "type": "boolean",
          "description": "Indicates if the current user can delete this post."
        },
        "author": {
          "$ref": "user.json#/definitions/user"
        },
        "editor": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "user.json#/definitions/user"
            }
          ]
        },
        "character": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "character.json#/definitions/character"
            }
          ]
        },
        "conversation": {
          "$ref": "conversation.json#/definitions/conversation"
        },
        "deleted_by": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "user.json#/definitions/user"
            }
          ]
        },
        "likes": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "array",
              "items": {
                "$ref": "like.json#/definitions/like"
              },
              "maxItems": 3
            }
          ]
        }
      },
      "required": [
        "id",
        "author_id",
        "editor_id",
        "character_id",
        "conversation_id",
        "display_name",
        "character_name",
        "body",
        "formatted_body",
        "likes_count",
        "deleted",
        "created_at",
        "updated_at",
        "likeable",
        "editable",
        "deletable"
      ],
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "post": {
      "$ref": "#/definitions/post"
    }
  },
  "required": [
    "post"
  ],
  "additionalProperties": false
}
