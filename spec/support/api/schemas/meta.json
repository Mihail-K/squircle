{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Meta",
  "description": "The generalized pagination dictionary.",
  "definitions": {
    "meta": {
      "type": "object",
      "properties": {
        "page": {
          "type": "integer"
        },
        "next": {
          "anyOf": [
            {
              "type": "null"
            },
            {
              "type": "integer"
            }
          ]
        },
        "prev": {
          "anyOf": [
            {
              "type": "null"
            },
            {
              "type": "integer"
            }
          ]
        },
        "size": {
          "type": "integer"
        },
        "per": {
          "type": "integer"
        },
        "total": {
          "type": "integer"
        },
        "pages": {
          "type": "integer"
        }
      },
      "required": [
        "page",
        "next",
        "prev",
        "size",
        "per",
        "total",
        "pages"
      ]
    }
  }
}
